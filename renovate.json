{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "group:allNonMajor",
    "customManagers:dockerfileVersions"
  ],
  "enabledManagers": [
    "asdf",
    "bundler",
    "circleci",
    "docker-compose",
    "dockerfile",
    "nodenv",
    "npm",
    "custom.regex"
  ],
  "packageRules": [
    {
      "matchDatasources": [
        "docker"
      ],
      "enabled": false,
      "matchPackageNames": [
        "/postgres/",
        "/solr/"
      ]
    },
    {
      "matchDatasources": [
        "asdf",
        "circleci",
        "regex"
      ],
      "enabled": false,
      "matchPackageNames": [
        "/node/",
        "/ruby/"
      ]
    }
  ],
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": [
        "^.tool-versions$"
      ],
      "matchStrings": [
        "\\s+(?<currentValue>\\S+)\\s*#\\s*datasource=(?<datasource>\\S+)\\s+depName=(?<depName>\\S+)(\\s+versioning=(?<versioning>\\S+))?(\\s+registryUrl=(?<registryUrl>\\S+))?\\s*\\n"
      ],
      "versioningTemplate": "{{#if versioning}}{{{versioning}}}{{else}}semver{{/if}}"
    },
    {
      "customType": "regex",
      "fileMatch": [
        "^.circleci/config.yml$"
      ],
      "matchStrings": [
        "node-version:.*'(?<currentValue>.*?)'"
      ],
      "datasourceTemplate": "node-version",
      "depNameTemplate": "node"
    },
    {
      "customType": "regex",
      "fileMatch": [
        "^.circleci/config.yml$"
      ],
      "matchStrings": [
        "cimg/ruby:(?<currentValue>.*?)-"
      ],
      "datasourceTemplate": "ruby-version",
      "depNameTemplate": "ruby"
    }
  ],
  "prHourlyLimit": 3
}

<div align="center">
  <h1>Contact the Latin American Ephemera Project</h1>

  <div class="row">
  <%= simple_form_for @contact, :html => {:class => 'form-horizontal' } do |f| %>

    <%= f.input :name, :required => true, label_html: { class: 'col-md-3' }, input_html: { class: 'col-md-9' }, wrapper_html: { class: 'row' } %>
    <%= f.input :email, :required => true, label_html: { class: 'col-md-3' }, input_html: { class: 'col-md-9' }, wrapper_html: { class: 'row' } %>
     
    <%= f.input :message, :as => :text, :required => true, label_html: { class: 'col-md-3' }, input_html: { class: 'col-md-9' }, wrapper_html: { class: 'row' } %>
    <div class= "hidden">
      <%= f.input :nickname, :hint => 'Leave this field blank!' %>
    </div>
    <div>
      </br>
      <%= f.button :submit, 'Send message', :class=> "btn btn-primary" %>
    </div>
  <% end %>
  </div>
</div>